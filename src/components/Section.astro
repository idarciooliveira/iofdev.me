---
const { eyebrow, title, description } = Astro.props;
---

<section class="page-section">
  <div class="container-shell">
    <div class="mb-8 space-y-3 sm:mb-10">
      {eyebrow && <p class="badge">{eyebrow}</p>}
      {title && <h2 class="text-3xl font-bold sm:text-4xl">{title}</h2>}
      {description && <p class="max-w-3xl text-(--text-soft)">{description}</p>}
    </div>
    <slot />
  </div>
</section>
