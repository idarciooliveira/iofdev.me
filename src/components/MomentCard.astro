---
const { year, title, description, image, imageAlt } = Astro.props;
---

<article class="card relative overflow-hidden p-4">
  <div class="absolute inset-x-0 top-0 h-1 gradient-block"></div>

  {
    image && (
      <div class="mb-3 overflow-hidden rounded-lg border border-(--surface-soft)">
        <img
          src={image}
          alt={imageAlt ?? title}
          class="h-44 w-full object-cover"
          loading="lazy"
          decoding="async"
        />
      </div>
    )
  }

  <p class="text-xs font-bold tracking-[0.12em] text-(--text-soft) uppercase">
    {year}
  </p>
  <h3 class="mt-1.5 text-lg font-bold">{title}</h3>
  <p class="mt-1.5 text-sm text-(--text-soft)">{description}</p>
</article>
