---
const {
  tag = "Software Engineer",
  title = "Olá, sou o Idárcio Oliveira",
  subtitle = "Construo experiências digitais rápidas, acessíveis e elegantes.",
  primaryCta = { href: "/projects", label: "Ver projetos" },
  secondaryCta = { href: "/about", label: "Sobre mim" },
} = Astro.props;
---

<section class="flex items-center py-6 sm:py-8 lg:py-10">
  <div class="container-shell">
    <div
      class="grid gap-10 lg:grid-cols-[1.2fr_0.8fr] lg:items-center lg:gap-14"
    >
      <div class="space-y-5">
        <span class="badge">{tag}</span>
        <h1 class="text-4xl font-black sm:text-5xl">{title}</h1>
        <p class="max-w-2xl text-lg text-(--text-soft) sm:text-xl">
          {subtitle}
        </p>

        <div class="flex flex-wrap gap-3 pt-2">
          <a
            href={primaryCta.href}
            class="inline-flex bg-[#231942] rounded-lg text-white px-5 py-2.5 text-sm font-semibold transition-opacity hover:opacity-85"
          >
            {primaryCta.label}
          </a>
          <a
            href={secondaryCta.href}
            class="inline-flex rounded-lg border px-5 py-2.5 text-sm font-semibold text-(--text) hover:bg-(--surface-soft)"
          >
            {secondaryCta.label}
          </a>
        </div>
      </div>

      <div class="flex items-center justify-center">
        <div
          class="gradient-block h-56 w-56 rounded-full p-0.75 shadow-xl sm:h-64 sm:w-64 lg:h-68 lg:w-68"
        >
          <div
            class="h-full w-full rounded-full border border-(--surface-soft) bg-(--surface) p-1"
          >
            <img
              src="/profile-image.jpeg"
              alt="Foto de perfil de Idárcio Oliveira"
              class="h-full w-full rounded-full object-cover"
              loading="eager"
              decoding="async"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
