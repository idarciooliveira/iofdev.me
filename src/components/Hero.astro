---
const {
  tag = "Software Engineer",
  title = "Olá, sou o Idárcio Oliveira",
  subtitle = "Construo experiências digitais rápidas, acessíveis e elegantes.",
  primaryCta = { href: "/projects", label: "Ver projetos" },
  secondaryCta = { href: "/about", label: "Sobre mim" },
} = Astro.props;
---

<section class="flex min-h-[calc(100svh-8.5rem)] items-center justify-center">
  <div class="container-shell w-full">
    <div
      class="grid gap-12 lg:grid-cols-[1.2fr_0.8fr] lg:items-center lg:gap-16"
    >
      <div class="space-y-6">
        <span class="badge">{tag}</span>
        <h1 class="text-5xl font-black sm:text-6xl">{title}</h1>
        <p class="max-w-2xl text-xl text-(--text-soft) sm:text-2xl">
          {subtitle}
        </p>

        <div class="flex flex-wrap gap-4 pt-2">
          <a
            href={primaryCta.href}
            class="inline-flex rounded-lg bg-[#231942] px-6 py-3 text-base font-semibold text-white transition-opacity hover:opacity-85"
          >
            {primaryCta.label}
          </a>
          <a
            href={secondaryCta.href}
            class="inline-flex rounded-lg border px-6 py-3 text-base font-semibold text-(--text) hover:bg-(--surface-soft)"
          >
            {secondaryCta.label}
          </a>
        </div>
      </div>

      <div class="flex items-center justify-center">
        <div
          class="gradient-block h-60 w-60 rounded-full p-0.75 shadow-xl sm:h-68 sm:w-68 lg:h-72 lg:w-72"
        >
          <div
            class="h-full w-full rounded-full border border-(--surface-soft) bg-(--surface) p-1"
          >
            <img
              src="/profile-image.jpeg"
              alt="Foto de perfil de Idárcio Oliveira"
              class="h-full w-full rounded-full object-cover"
              loading="eager"
              decoding="async"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
