---
import "../styles/global.css";
import Nav from "../components/Nav.astro";
import SocialIconDock from "../components/SocialIconDock.astro";

const {
  title,
  description = "Portfólio de Idárcio Oliveira — Engenheiro de Software.",
  content,
} = Astro.props;

const pageTitle = title ?? content?.title ?? "Idárcio Oliveira — Portfólio";
const pathname = Astro.url.pathname;
---

<html lang="pt">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <script is:inline>
      (() => {
        const storageKey = "theme";
        const savedTheme = localStorage.getItem(storageKey);
        const systemPrefersDark = window.matchMedia(
          "(prefers-color-scheme: dark)",
        ).matches;
        const theme =
          savedTheme === "light" || savedTheme === "dark"
            ? savedTheme
            : systemPrefersDark
              ? "dark"
              : "light";
        document.documentElement.setAttribute("data-theme", theme);
      })();
    </script>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{pageTitle}</title>
  </head>
  <body class="flex min-h-svh flex-col">
    <Nav currentPath={pathname} />
    <main class="flex-1">
      <slot />
    </main>
    <footer class="border-t py-6">
      <div
        class="container-shell flex flex-col items-center gap-2 text-center text-sm text-(--text-soft) sm:flex-row sm:items-center sm:justify-between sm:text-left"
      >
        <p>© {new Date().getFullYear()} Todos os direitos reservados.</p>
        <SocialIconDock />
      </div>
    </footer>
  </body>
</html>
