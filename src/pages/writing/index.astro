---
import MainLayout from "../../layouts/main.astro";
import Section from "../../components/Section.astro";

const noteGroups = [
  {
    month: "Fevereiro",
    items: [
      {
        title: "Como penso arquitetura frontend em produtos em crescimento",
        excerpt:
          "Uma abordagem prática para equilibrar velocidade, qualidade e autonomia de times.",
        dateLabel: "13 de fevereiro de 2026",
      },
      {
        title: "Checklist de acessibilidade que uso no dia a dia",
        excerpt:
          "Itens essenciais para manter UX inclusiva desde o primeiro commit.",
        dateLabel: "07 de fevereiro de 2026",
      },
    ],
  },
  {
    month: "Janeiro",
    items: [
      {
        title: "Design tokens sem dor: estratégia para escalar UI",
        excerpt:
          "Como organizar semântica visual para evoluir seu design system com consistência.",
        dateLabel: "21 de janeiro de 2026",
      },
    ],
  },
  {
    month: "Dezembro",
    items: [
      {
        title: "Notas de campo: decisões de produto que reduziram retrabalho",
        excerpt:
          "Padrões de comunicação e documentação leve para manter entregas rápidas sem perder contexto.",
        dateLabel: "14 de dezembro de 2025",
      },
    ],
  },
];
---

<MainLayout
  title="Writing — Idárcio Oliveira"
  description="Anotações, aprendizados e ideias sobre engenharia de software, frontend e produto."
>
  <Section
    eyebrow="Writing"
    title="Notas rápidas e aprendizados"
    description="Rascunhos e aprendizados sobre frontend, produto e engenharia em projetos reais."
  >
    <div class="space-y-10">
      {
        noteGroups.map((group) => (
          <section>
            <h3 class="mb-4 text-2xl font-bold tracking-tight sm:text-3xl">
              {group.month}
            </h3>

            <div class="space-y-4">
              {group.items.map((note) => (
                <article class="card group transition-colors hover:border-(--accent)">
                  <div class="flex items-start justify-between gap-3">
                    <h4 class="text-xl font-semibold leading-tight sm:text-2xl">
                      {note.title}
                    </h4>
                  </div>

                  <p class="mt-3 text-base text-(--text-soft)">
                    {note.excerpt}
                  </p>

                  <div class="mt-4 flex flex-wrap items-center justify-between gap-3">
                    <p class="inline-flex items-center gap-2 text-sm text-(--text-soft)">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="1.8"
                        class="h-4 w-4"
                        aria-hidden="true"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          d="M8 2v3m8-3v3M3.75 9.75h16.5m-15 10.5h13.5a1.5 1.5 0 0 0 1.5-1.5v-9a1.5 1.5 0 0 0-1.5-1.5H5.25a1.5 1.5 0 0 0-1.5 1.5v9a1.5 1.5 0 0 0 1.5 1.5Z"
                        />
                      </svg>
                      {note.dateLabel}
                    </p>

                    <a
                      href="/markdown-page"
                      class="link-accent inline-flex items-center gap-1 text-sm font-semibold"
                    >
                      Ler rascunho
                      <span aria-hidden="true">→</span>
                    </a>
                  </div>
                </article>
              ))}
            </div>
          </section>
        ))
      }
    </div>
  </Section>
</MainLayout>
