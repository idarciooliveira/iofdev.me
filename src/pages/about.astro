---
import MainLayout from "../layouts/main.astro";
import Section from "../components/Section.astro";
import AboutTerminal from "../components/AboutTerminal.astro";

const experiences = [
  {
    role: "Software Engineer",
    company: "People In Need",
    location: "Angola",
    period: "Atual",
    description:
      "Responsável pelo desenvolvimento e manutenção do aplicativo de LogBook para gestão de frotas, deploy de apps móveis e APIs em servidores internos, além de integração com serviços usados por missões em diferentes países.",
  },
  {
    role: "Frontend e Mobile Developer",
    company: "Mutundo Express - Food trading and distribution platform",
    location: "Angola",
    period: "2022 — 2024",
    description:
      "Desenho de arquitetura e desenvolvimento do app Android e iOS com React Native, implementação de pipeline CI/CD e gestão completa de distribuição nas lojas Google Play e Apple Store.",
  },
  {
    role: "Backend Developer",
    company: "Njilayetu - Routing e geolocation services platform",
    location: "Angola",
    period: "2022 — 2023",
    description:
      "Implementação dos serviços de roteamento e geolocalização, integração com APIs de pagamento, e-mail e webhooks, documentação da API com Swagger UI e deploy dos serviços da plataforma.",
  },
  {
    role: "Tech Lead",
    company:
      "Tecnofarma - Health platform that connects patients from hospital services with medications in pharmacies",
    location: "Angola",
    period: "2019 — 2021",
    description:
      "Liderança de ponta a ponta no desenvolvimento da plataforma, orientação técnica da equipa, definição de arquitetura robusta para backend e frontend e integração de serviços externos com foco em entregas de valor.",
  },
  {
    role: "Técnico de Informática",
    company:
      "Tecnobase - Distribuição de produtos informáticos e prestação de serviços tecnológicos",
    location: "Huíla - Lubango",
    period: "Fev — Nov 2018",
    description:
      "Atuação em manutenção e reparação de computadores, instalação de redes, elaboração de relatórios e desenvolvimento do projeto TecnoFarma, uma aplicação de gestão hospitalar.",
  },
];
---

<MainLayout
  title="Sobre — Idárcio Oliveira"
  description="Conheça a trajetória e experiência profissional de Idárcio Oliveira."
  ogImage="/profile-image.jpeg"
>
  <Section>
    <AboutTerminal />
  </Section>
  <Section eyebrow="Sobre" title="Engenharia com visão de produto">
    <div class="grid gap-6 lg:grid-cols-[1.2fr_0.8fr]">
      <div class="card space-y-4">
        <p>
          Sou um engenheiro de software apaixonado por criar produtos digitais
          úteis, rápidos e acessíveis. Gosto de transformar requisitos complexos
          em experiências simples e confiáveis.
        </p>
        <p>
          Meu foco atual está em arquitetura frontend, colaboração entre design
          e engenharia, e em elevar a qualidade das entregas com testes,
          observabilidade e boas práticas.
        </p>
      </div>
      <div class="card grid-pattern min-h-56 overflow-hidden">
        <div class="h-full rounded-xl gradient-block opacity-85"></div>
      </div>
    </div>
  </Section>

  <Section eyebrow="Experiência" title="Work Experiences">
    <div class="space-y-4">
      {
        experiences.map((item) => (
          <article class="card">
            <div class="flex flex-wrap items-start justify-between gap-3">
              <div>
                <h3 class="text-xl font-bold">{item.role}</h3>
                <p class="text-sm text-(--text-soft)">
                  {item.company} · {item.location}
                </p>
              </div>
              <p class="badge">{item.period}</p>
            </div>
            <p class="mt-4 text-sm text-(--text-soft)">{item.description}</p>
          </article>
        ))
      }
    </div>
  </Section>
</MainLayout>
